#!/bin/bash
source venv/bin/activate
set -e

# echo converting notebooks
# for nb in docs/*.ipynb; do
#     jupyter nbconvert --to markdown $nb
# done

echo generating documentation
verb() {
    echo
    echo '```'
}
endverb() {
    echo '```'
    echo
}

(
cat <<EOF
Documentation as generated by 'pydoc3' (default Python documentation
viewer). You can view this at the command line by typing
'pydoc3 MODULE_NAME'.
EOF
for modfile in torchmore/*.py; do
    mod=$(echo $modfile | sed 's!/!.!g;s/.py$//')
    echo "# module \`$mod\`"
    verb
    pydoc3 $mod
    endverb
done
) > docs/pydoc.md

